# shortcut
alias py="python3"
alias sc="screen"
alias g="git"
alias gi="git"
alias v="vim"
alias vi="vim"

# add options
alias l="ls -hF --color"
alias ls="ls -hF --color"
alias rm="rm -i"
alias mkdir="mkdir -p"
alias df="df -h"
alias du="du -h"
alias free="free -h"

alias grep="grep --color=auto"
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# directory move
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# typo
alias sl=ls
